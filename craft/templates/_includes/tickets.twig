{% if entry.titoEventName | length %}
<section class="gradient margin-bottom-xl" id="tickets">
	<div class="container max-width-adaptive-md color-white svg-inherit text-component">

		<h2 class="text-xl text-xxl@sm margin-bottom-xs color-white">Pay What You Can Afford Tickets</h2>
		<div class="font-secondary text-md color-tertiary-lighter margin-bottom-sm">#{{ entry.eventNo }} {{ entry.eventDate | date('M j Y') }}</div>

		{{ entry.ticketIntro }}

		<tito-widget event="mkgn/{{ entry.titoEventName }}"></tito-widget>

	</div>
</section>
{% endif %}